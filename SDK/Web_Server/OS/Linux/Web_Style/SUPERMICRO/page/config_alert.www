        	  <br>
        	  <input type="button" class="btnStyle" id="btn_modify" $(TAG_DISABLE)/>
        	  <input type="button" class="btnStyle" id="btn_test" $(TAG_DISABLE)/>
        	  <input type="button" class="btnStyle" id="btn_del" $(TAG_DISABLE)/>
        	  <!-- end of this area -->
        	  </td>
        <tr>
    </table>
</body>
</html>