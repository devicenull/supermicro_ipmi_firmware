        	  	<table border="0">
        	  		<tr>
						<td><div class="labelhead"><script>document.writeln(lang.LANG_SMTP_SSL)</script></div></td>
						<td><input type="CHECKBOX" name="smtpSSL_en" id="smtpSSL" $(TAG_DISABLE)/></td>
					</tr>
					<tr>
